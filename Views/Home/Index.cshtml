@{
    ViewData["Title"] = "Home";
}
<link rel="stylesheet" href="~/css/home.css" />



<div class="hero-section">
    <div class="container">
        <h1 class="hero-title">
            Your Personal Cloud Storage
        </h1>
        <p class="hero-subtitle">
            Store, manage, and share your files securely with our modern cloud drive solution. 
            1GB free storage, no credit card required.
        </p>
        <div>
            <a href="/Auth/Register" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-rocket"></i> Get Started Free
            </a>
            <a href="/Auth/Login" class="btn btn-outline-light btn-lg">
                <i class="fas fa-sign-in-alt"></i> Sign In
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-cloud-upload-alt"></i>
                </div>
                <h3>Easy Upload</h3>
                <p style="color: var(--text-secondary);">
                    Drag and drop your files or click to upload. Support for all file types 
                    with instant processing.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-folder-tree"></i>
                </div>
                <h3>Organize Files</h3>
                <p style="color: var(--text-secondary);">
                    Create folders, move files, and keep everything organized. 
                    Nested folder support for complex structures.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-share-alt"></i>
                </div>
                <h3>Secure Sharing</h3>
                <p style="color: var(--text-secondary);">
                    Share files with password protection and expiry dates. 
                    Generate shareable links instantly.
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h3>Bank-Level Security</h3>
                <p style="color: var(--text-secondary);">
                    Your files are encrypted and stored securely. We use industry-standard 
                    security practices.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h3>Fast Search</h3>
                <p style="color: var(--text-secondary);">
                    Find your files instantly with our powerful search. 
                    Filter by name, type, or date.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-history"></i>
                </div>
                <h3>Version Control</h3>
                <p style="color: var(--text-secondary);">
                    Never lose your work. We keep track of file versions 
                    automatically.
                </p>
            </div>
        </div>
    </div>

    <div class="stats-section">
        <div class="row">
            <div class="col-md-4">
                <div class="stat-item">
                    <div class="stat-number">1 GB</div>
                    <div class="stat-label">Free Storage</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-item">
                    <div class="stat-number">∞</div>
                    <div class="stat-label">File Types</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-item">
                    <div class="stat-number">100%</div>
                    <div class="stat-label">Secure</div>
                </div>
            </div>
        </div>
    </div>
</div>